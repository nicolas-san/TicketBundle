<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Hackzilla\Bundle\TicketBundle\Entity\TicketMessageWithAttachmentFromMail" table="ticket_message">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="user" type="integer" column="user_id" precision="0" scale="0" nullable="false"/>
    <field name="message" type="text" column="message" precision="0" scale="0" nullable="true"/>
    <field name="status" type="smallint" column="status" precision="0" scale="0" nullable="false"/>
    <field name="priority" type="smallint" column="priority" precision="0" scale="0" nullable="false"/>
    <field name="attachmentName" type="string" column="attachment_name" length="255" nullable="true"/>
    <field name="attachmentSize" type="integer" column="attachment_size" nullable="true"/>
    <field name="attachmentMimeType" type="string" column="attachment_mimetype" length="255" nullable="true"/>
    <field name="createdAt" type="datetime" column="created_at" precision="0" scale="0" nullable="true"/>
    <field name="mailDate" type="datetime" column="mail_date" precision="0" scale="0" nullable="true"/>
    <field name="messagePlain" type="text" column="message_plain" precision="0" scale="0" nullable="true"/>
    <field name="messageHtml" type="text" column="message_html" precision="0" scale="0" nullable="true"/>
    <field name="headerRaw" type="text" column="header_raw" precision="0" scale="0" nullable="true"/>
    <field name="from" type="object" column="mail_from" precision="0" scale="0" nullable="true"/>
    <field name="replyTo" type="object" column="mail_reply_to" precision="0" scale="0" nullable="true"/>

    <many-to-one field="ticket" target-entity="Hackzilla\Bundle\TicketBundle\Entity\TicketWithAttachmentFromMail" inversed-by="messages" fetch="LAZY">
      <join-columns>
        <join-column name="ticket_id" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
