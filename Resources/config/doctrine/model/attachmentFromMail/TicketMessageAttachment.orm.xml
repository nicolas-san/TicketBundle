<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Hackzilla\Bundle\TicketBundle\Entity\TicketMessageAttachment" table="ticket_message_attachment">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="attachmentFilename" type="string" column="attachment_filename" length="255" nullable="true"/>
    <!--<field name="attachmentSize" type="integer" column="attachment_size" nullable="true"/>
    <field name="attachmentMimeType" type="string" column="attachment_mimetype" length="255" nullable="true"/>-->
    <field name="updatedAt" type="datetime" column="updated_at" precision="0" scale="0" nullable="true"/>

    <many-to-one field="message" target-entity="Hackzilla\Bundle\TicketBundle\Entity\TicketMessageWithAttachmentFromMail" inversed-by="attachments" fetch="LAZY">
      <join-columns>
        <join-column name="message_id" referenced-column-name="id" on-delete="CASCADE" nullable="1"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
